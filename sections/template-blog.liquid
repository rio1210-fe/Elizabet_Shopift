<div class="py-8">
    {% paginate blog.articles by section.settings.number_of_blog_posts %}
       
        <h1 class="text-center text-3xl">{{ blog.title }}</h1>
       
        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {% for article in blog.articles %}
                    <div class="w-full py-6 px-3">
                        <div class="bg-white shadow-xl rounded-lg overflow-hidden pb-3">
                            <a href="{{ article.url }}">
                                {% if article.image != blank %}
                                    <img class="w-full h-80 object-cover" src="{{ article.image | img_url: 'medium' }}" alt="{{ article.image.alt }}">
                                {% else %}
                                    {{ 'image' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}        
                                {% endif %}
                            </a>    
                            <div class="p-4">
                                {% if section.settings.enable_title %}
                                    <h1 class="text-xl font-medium my-4">{{ article.title }}</h1>
                                {% endif %}
                                {% if article.excerpt.size > 0 %}
                                    {% if section.settings.enable_content %}
                                        <p>{{ article. content | strip_html | truncatewords: 15 }}</p>
                                    {% endif %}
                                {% else %}
                                    {% if section.settings.enable_content %}
                                        <p>{{ article. content | strip_html | truncatewords: 15 }}</p>
                                    {% endif %}
                                {% endif %}
                                <a class="text-md pt-3 font-medium flex items-center text-blue-600 hover: text-blue-900" href="{{ article.url }}">
                                    {{ section.settings.read_more_label}}
                                    {% render 'icon-chevron-right' %}
                                </a>
                            </div>    
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="max-w-6xl mx-auto">
            {% render 'pagination', pagination: paginate %}
        </div>
    {% endpaginate %}
</div>

{% schema %}
    {
        "name": "Blog",
        "settings": [
            {
                "type": "range",
                "id": "number_of_blog_posts",
                "step": 1,
                "min": 1,
                "max": 6,
                "label": "Blog posts per page",
                "default": 3
            },
            {
               "type": "checkbox",
               "id": "enable_title",
              "default": true,
              "label": "Show article title"
            },
            {
               "type": "checkbox",
               "id": "enable_content",
              "default": true,
              "label": "Show article short content"
            },
            {
               "type": "text",
               "id": "read_more_label",
              "default": "Read more",
              "label": "Read more label"
            }
        ]
    }
{% endschema %}